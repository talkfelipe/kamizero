<div class="container">
  <div class="d-flex align-items-center gap-4">
    <div class="">
      <%= link_to "â† Back", dashboard_path, class: "text-decoration-none text-secondary" %>
    </div>
    <div class="py-2">
      <h2>Hi, <%= current_user.first_name %></h2>
      <p>Select the school, grade and classroom you wish to subscribe</p>
    </div>
  </div>
  <div class="border p-3 shadow rounded">
    <%= simple_form_for @subscription, html: { data: { controller: "conditional-form" } } do |f| %>
    <%= f.association :school %>
    <h3>Target Audience</h3>
      <div class="row">
        <div class="col-6">
          <%= f.input :grade, collection: Notice::SUBGRADES %>
        </div>
        <div class="col-6">
          <%= f.input :classroom, collection: Notice::SUBCLASSROOMS %>
        </div>
    </div>
    <div class="d-flex justify-content-end m-3">
    <%= link_to "Cancel", dashboard_path, class: "btn btn-light"%>
    <%= f.button :submit, "Subscribe", class: "btn btn-dark" %>
    </div>
    <% end %>
  </div>
</div>
