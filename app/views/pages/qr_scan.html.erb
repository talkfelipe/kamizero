<div class="container my-4" data-controller="qr-scanner">
  <h2 class="mb-3">Scan QR Code</h2>
  <p class="text-muted">
    Please read QR Code from this screen.
  </p>

  <button data-qr-scanner-target="retryBtn"
          data-action="click->qr-scanner#retry"
          class="btn btn-outline-secondary my-3 d-none">
    Camera did not start? Click here to retry.
  </button>

  <div id="qr-reader" data-qr-scanner-target="reader" style="width: 320px; max-width: 100%;"></div>
  <div data-qr-scanner-target="result" class="mt-3 text-muted"></div>
</div>
