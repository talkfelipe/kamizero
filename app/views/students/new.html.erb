<div class="container my-4 subscription-page">
  <!-- HEADER + BACK LINK -->
  <div class="subscription-header mb-4">
    <%= link_to dashboard_path, class: "text-decoration-none text-secondary" do %>
      <i class="fa-solid fa-angles-left"></i> <strong>BACK</strong>
    <% end %>
    <h2>Welcome, <%= current_user.first_name %>!</h2>
    <p>Select the SCHOOL, GRADE, and CLASSROOM to setup SUBSCRIPTION </p>
  </div>
  <!-- SUBSCRIPTION FORM CARD -->
  <div class="card subscription-card p-4 shadow-sm rounded">
    <%= simple_form_for @student, html: { data: { controller: "conditional-form" } } do |f| %>
      <%= f.input :name %>
      <%= f.association :school,
                        label: "School",
                        selected: @student.school_id %>
      <h3 class="mt-4 mb-3">TARGET AUDIENCE <i class="fa-solid fa-angles-down"></i></h3>
      <div class="row">
        <div class="col-6">
          <select name="classroom[grade]" id="student_classroom_id" class="form-select select optional">
            <option value="" label="Grade"></option>
            <% Notice::SUBGRADES.each do |grade| %>
                  <option value="<%= grade %>" <%= "selected" if grade.to_s == @selected_grade.to_s %>>
                    <%= grade %>
                  </option>
            <% end %>
          </select>
        </div>
        <div class="col-6">
          <select name="classroom[name]" id="student_classroom_id" class="form-select select optional">
            <option value="" label="Classroom"></option>
            <% Notice::SUBCLASSROOMS.each do |name| %>
              <option value="<%= name %>" <%= "selected" if name.to_s == @selected_classroom.to_s %>>
                <%= name %>
              </option>
            <% end %>
          </select>
        </div>
        <div class="d-flex justify-content-end mt-4 gap-2">
          <%= link_to "CANCEL", dashboard_path, class: "btn btn-light px-4" %>
          <%= f.button :submit, "SUBSCRIBE",
              class: "btn btn-dark px-4" %>
        </div>
      <% end %>
    </div>
    <!-- END SUBSCRIPTION FORM CARD -->
  </div>
