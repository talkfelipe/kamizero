<!-- Container for Card -->
<div class="container my-2">
  <div class="my-3">
    <%= link_to "←　Back", notices_path, class: "text-decoration-none text-secondary" %>
  </div>
  <div class="card shadow-sm border-0 bg-white" style="border-radius: 1.5rem;">
    <div
      data-controller="mark-read"
      data-mark-read-url-value="<%= mark_as_read_notice_path(@notice, format: :json) %>">
      <div class="card-body position-relative">
        <!-- Event badge to be created later -->
        <span class="badge rounded-pill bg-dark position-absolute top-0 end-0 m-3">
          <%= @notice.category == "Event" ? "Event" : "General"%>
        </span>
        <!-- Title -->
        <h2 class="card-title mb-3">
          <%= @notice.title %>
        </h2>
        <!-- School / Grade / Class pill -->
        <div class="mb-3 d-flex flex-wrap gap-2">
          <span class="badge rounded-pill bg-white text-dark border">
            School: <%= @notice.school.name %>
          </span>
          <span class="badge rounded-pill bg-white text-dark border">
            Grade: <%= @notice.grade %>
          </span>
          <span class="badge rounded-pill bg-white text-dark border">
            Class: <%= @notice.classroom %>
          </span>
        </div>
        <!-- Content -->
        <div class="mt-3">
          <%= simple_format(@notice.content, class: "mb-0") %>
          <% if @notice.attachment.attached? %>
            <p>Attached file: <%= link_to @notice.attachment.filename.to_s, url_for(@notice.attachment), target: "_blank" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
