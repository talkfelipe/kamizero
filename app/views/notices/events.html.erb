<div class="container notice-page events-page">

  <!-- KAMIZERO TOP CARD (same as notices / create pages) -->
  <%= render "shared/kamizero_top_card" %>

  <!-- BACK + PAGE TITLE + SUBTITLE (aligned with notices header) -->
  <div class="notice-header">
    <%= link_to dashboard_path, class: "text-decoration-none text-secondary" do %>
      <i class="fa-solid fa-angles-left"></i> <strong>BACK</strong>
    <% end %>

    <h2>All Events</h2>
    <p>View All Upcoming School Events <i class="fa-solid fa-angles-down"></i></p>
  </div>

  <!-- MAIN LAYOUT (original content, just given a wrapper class) -->
  <div class="row g-3 mb-4 events-main">
    <div class="col-8">
      <div class="card events-calendar-card">
        <div class="card-header">
          CALENDAR <i class="fa-solid fa-calendar-days"></i>
        </div>
        <div class="card-body p-0">
          <%= month_calendar do |date| %>
            <div class="calendar-day">
              <span class="date-number"><%= date.day %></span>
              <% if @events_for_day[date] %>
                <% @events_for_day[date].each do |event| %>
                  <%= link_to "#{event.title}", notice_path(event) %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="card events-side-card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>All Events</span>
        </div>
        <!-- All events -->
        <ul class="list-group list-group-flush events-list">
          <% if @events.present? %>
            <% @events.each do |event| %>
              <li class="list-group-item d-flex">
                <div class="me-3">
                  <small class="fw-semibold">
                    <%= event.date.strftime("%B %d, %Y") %>
                    <p><%= event.start_time.strftime("%H:%M") %> - <%= event.end_time.strftime("%H:%M") %></p>
                  </small>
                </div>
                <div class="flex-grow-1">
                  <%= link_to "#{event.title}", notice_path(event) %>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="list-group-item text-muted">
              No upcoming events yet.
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
